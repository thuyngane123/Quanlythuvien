@model IEnumerable<Quanlythuvien.Models.TblNhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản lý Nhân Viên</h1>
    <a asp-action="Create" class="btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Thêm Nhân Viên Mới
    </a>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách Nhân Viên</h6>
        </div>
        <div class="row mb-4">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng số tài khoản Nhân Viên
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <i class="fas fa-book fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Tên đăng nhập NV</th>
                            <th>Họ tên</th>
                            <th>Địa Chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Trạng thái</th>
                            <th class="text-center" style="width:150px;">Hành Động</th>
                        </tr>
                    </thead>
                    <tfoot>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.TenNv</th>
                                <th>@item.Hoten</th>
                                <th>@item.Diachi</th>
                                <th>@item.Sodienthoai</th>
                                <th>@item.Trangthai</th>
                                <th class="text-center">

                                    <a asp-action="Edit" asp-route-id="@item.MaNv" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaNv" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa sách này?')">
                                        <i class="fas fa-trash"></i>Xóa
                                    </a>
                                </th>
                            </tr>
                        }
                    </tfoot>

                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->