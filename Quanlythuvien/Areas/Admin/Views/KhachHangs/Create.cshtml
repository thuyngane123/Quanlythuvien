@model Quanlythuvien.Models.TblKhachHang

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Thêm khách hàng mới</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" accept-charset="utf-8">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="MaKh" class="form-label fw-semibold">Mã Khách Hàng</label>
                    <input asp-for="MaKh" class="form-control" value="@ViewBag.NextMaKh" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Tendangnhap" class="form-label fw-semibold"></label>
                    <input asp-for="Tendangnhap" class="form-control" placeholder="Nhập tên đăng nhập..." />
                    <span asp-validation-for="Tendangnhap" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Matkhau" class="form-label fw-semibold"></label>
                    <input asp-for="Matkhau" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="Matkhau" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Hoten" class="form-label fw-semibold"></label>
                    <input asp-for="Hoten" class="form-control" placeholder="Nhập họ tên..." />
                    <span asp-validation-for="Hoten" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Nhập địa chỉ email..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sodienthoai" class="form-label fw-semibold"></label>
                    <input asp-for="Sodienthoai" class="form-control" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="Sodienthoai" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Trangthai" class="form-label fw-semibold"></label>
                    <input asp-for="Trangthai" class="form-control" placeholder="Nhập trạng thái..." />
                    <span asp-validation-for="Trangthai" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Thêm mới
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
