@model Quanlythuvien.Models.TblMuonTra

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-white text-center py-3 rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-book"></i> Cập nhật Phiếu Mượn</h4>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="MaMuon" />

                <div class="mb-3">
                    <label asp-for="MaKh" class="form-label fw-semibold">Khách hàng</label>
                    <select asp-for="MaKh" class="form-select" asp-items="@ViewBag.MaKh"></select>
                    <span asp-validation-for="MaKh" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaSach" class="form-label fw-semibold">Sách mượn</label>
                    <select asp-for="MaSach" class="form-select" asp-items="@ViewBag.MaSach"></select>
                    <span asp-validation-for="MaSach" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ngaymuon" class="form-label fw-semibold">Ngày mượn</label>
                    <input asp-for="Ngaymuon" type="date" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Ngaytra" class="form-label fw-semibold">Ngày trả</label>
                    <input asp-for="Ngaytra" type="date" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Trangthai" class="form-label fw-semibold">Trạng thái</label>
                    <select asp-for="Trangthai" class="form-select">
                        <option value="Đang mượn">Đang mượn</option>
                        <option value="Đã trả">Đã trả</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-warning px-4 text-white">
                        <i class="bi bi-check-circle"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>