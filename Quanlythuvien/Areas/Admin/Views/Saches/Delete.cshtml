@model Quanlythuvien.Models.TblSach

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white text-center py-3 rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-trash"></i> Xóa sách</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Delete" method="post" accept-charset="utf-8">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <input type="hidden" asp-for="MaSach" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Tên sách:</label>
                    @Html.DisplayFor(model => model.TenSach)
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Thể loại:</label>
                    @Html.DisplayFor(model => model.MaTlNavigation.TenTl)
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Tác giả:</label>
                    @Html.DisplayFor(model => model.MaTgNavigation.TenTg)
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Nhà xuất bản:</label>
                    @Html.DisplayFor(model => model.MaNxbNavigation.TenNxb)
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Số lượng:</label>
                    @Html.DisplayFor(model => model.Soluong)
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Năm xuất bản:</label>
                    @Html.DisplayFor(model => model.NamXb)
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Ảnh bìa:</label><br />
                    <img src="~/images/@Model.Anh" alt="Ảnh sách" width="150" class="rounded shadow-sm" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Mô tả:</label>
                    <p>@Html.DisplayFor(model => model.Mota)</p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Trạng thái:</label>
                    @Html.DisplayFor(model => model.Trangthai)
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
