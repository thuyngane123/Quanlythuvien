@model Quanlythuvien.Models.TblNhanVien

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Thêm nhân viên mới</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" accept-charset="utf-8">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="MaNv" class="form-label fw-semibold">Mã Nhân Viên</label>
                    <input asp-for="MaNv" class="form-control" value="@ViewBag.NextMaNv" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="TenNv" class="form-label fw-semibold"></label>
                    <input asp-for="TenNv" class="form-control" placeholder="Nhập tên đăng nhập của NV..." />
                    <span asp-validation-for="TenNv" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Matkhau" class="form-label fw-semibold"></label>
                    <input asp-for="Matkhau" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="Matkhau" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Hoten" class="form-label fw-semibold"></label>
                    <input asp-for="Hoten" class="form-control" placeholder="Nhập họ tên..." />
                    <span asp-validation-for="Hoten" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Diachi" class="form-label fw-semibold"></label>
                    <input asp-for="Diachi"  class="form-control" placeholder="Nhập địa chỉ ..." />
                    <span asp-validation-for="Diachi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sodienthoai" class="form-label fw-semibold"></label>
                    <input asp-for="Sodienthoai" class="form-control" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="Sodienthoai" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Trangthai" class="form-label fw-semibold"></label>
                    <input asp-for="Trangthai" class="form-control" placeholder="Nhập trạng thái..." />
                    <span asp-validation-for="Trangthai" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Thêm mới
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const form = document.querySelector("form");

            form.addEventListener("submit", function(e) {
                let isValid = true;

                // Lấy các input cần kiểm tra
                const tenNv = document.querySelector("[name='TenNv']");
                const matkhau = document.querySelector("[name='Matkhau']");
                const hoten = document.querySelector("[name='Hoten']");
                const diachi = document.querySelector("[name='Diachi']");
                const sdt = document.querySelector("[name='Sodienthoai']");
                const trangthai = document.querySelector("[name='Trangthai']");

                // Xóa thông báo lỗi cũ
                document.querySelectorAll(".text-danger").forEach(el => el.textContent = "");

                // Kiểm tra từng trường
                if (tenNv.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='TenNv']").textContent = "Tên nhân viên không được để trống";
                    isValid = false;
                }

                if (matkhau.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Matkhau']").textContent = "Mật khẩu không được để trống";
                    isValid = false;
                }

                if (hoten.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Hoten']").textContent = "Họ tên không được để trống";
                    isValid = false;
                }

                if (diachi.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Diachi']").textContent = "Địa chỉ không được để trống";
                    isValid = false;
                }

                if (sdt.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Sodienthoai']").textContent = "Số điện thoại không được để trống";
                    isValid = false;
                }

                if (trangthai.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Trangthai']").textContent = "Trạng thái không được để trống";
                    isValid = false;
                }

                // Nếu có lỗi thì ngăn không cho submit
                if (!isValid) {
                    e.preventDefault();
                }
            });
        });
    </script>
}