@model Quanlythuvien.Models.TblNxb

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Xóa nhà xuất bản</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Delete" accept-charset="utf-8">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <label for="exampleInputEmail">Tên nhà xuất bản: </label>
                    @Html.DisplayFor(model => model.TenNxb)

                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail">Địa chỉ: </label>
                    @Html.DisplayFor(model => model.Diachi)

                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail">Số điện thoại: </label>
                    @Html.DisplayFor(model => model.Sodienthoai)

                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>