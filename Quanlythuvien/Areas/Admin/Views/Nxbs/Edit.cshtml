@model Quanlythuvien.Models.TblNxb

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Sửa thông tin nhà xuất bản</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post" accept-charset="utf-8">
                <input type="hidden" asp-for="MaNxb" />
                <div class="mb-3">
                    <label class="form-label fw-semibold">Mã NXB</label>
                    <input type="text" class="form-control" value="" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="TenNxb" class="form-label fw-semibold"></label>
                    <input asp-for="TenNxb" class="form-control" placeholder="Nhập tên nhà xuất bản..." />
                    <span asp-validation-for="TenNxb" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Diachi" class="form-label fw-semibold"></label>
                    <input asp-for="Diachi" class="form-control" placeholder="Nhập địa chỉ..." />
                    <span asp-validation-for="Diachi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sodienthoai" class="form-label fw-semibold"></label>
                    <input asp-for="Sodienthoai" class="form-control" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="Sodienthoai" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Sửa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const form = document.querySelector("form");

            form.addEventListener("submit", function(e) {
                let isValid = true;

                // Lấy các input cần kiểm tra
                const tenNxb = document.querySelector("[name='TenNxb']");
                const diachi = document.querySelector("[name='Diachi']");
                const sdt = document.querySelector("[name='Sodienthoai']");

                // Xóa thông báo lỗi cũ
                document.querySelectorAll(".text-danger").forEach(el => el.textContent = "");

                // Kiểm tra tên NXB
                if (tenNxb.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='TenNxb']").textContent = "Tên nhà xuất bản không được để trống";
                    isValid = false;
                }

                // Kiểm tra địa chỉ
                if (diachi.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Diachi']").textContent = "Địa chỉ không được để trống";
                    isValid = false;
                }

                // Kiểm tra số điện thoại
                if (sdt.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Sodienthoai']").textContent = "Số điện thoại không được để trống";
                    isValid = false;
                } else if (!/^(0\d{9})$/.test(sdt.value.trim())) {
                    document.querySelector("[data-valmsg-for='Sodienthoai']").textContent = "Số điện thoại phải gồm 10 chữ số và bắt đầu bằng 0";
                    isValid = false;
                }

                // Ngăn submit nếu có lỗi
                if (!isValid) {
                    e.preventDefault();
                }
            });
        });
    </script>
}

