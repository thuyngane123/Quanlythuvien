@model Quanlythuvien.Models.TblKhachHang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Sửa thông tin người đọc mới</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post" accept-charset="utf-8">
                <input type="hidden" asp-for="MaKh" />
                <div class="mb-3">
                    <label class="form-label fw-semibold">Mã người đọc</label>
                    <input type="text" class="form-control" value="" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Tendangnhap" class="form-label fw-semibold"></label>
                    <input asp-for="Tendangnhap" class="form-control" placeholder="Nhập tên đăng nhập..." />
                    <span asp-validation-for="Tendangnhap" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Matkhau" class="form-label fw-semibold"></label>
                    <input asp-for="Matkhau" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="Matkhau" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Hoten" class="form-label fw-semibold"></label>
                    <input asp-for="Hoten" class="form-control" placeholder="Nhập họ tên..." />
                    <span asp-validation-for="Hoten" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Nhập địa chỉ email..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sodienthoai" class="form-label fw-semibold"></label>
                    <input asp-for="Sodienthoai" class="form-control" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="Sodienthoai" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Trangthai" class="form-label fw-semibold"></label>
                    <input asp-for="Trangthai" class="form-control" placeholder="Nhập trạng thái..." />
                    <span asp-validation-for="Trangthai" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Sửa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const form = document.querySelector("form");

            form.addEventListener("submit", function(e) {
                let isValid = true;

                // Lấy các input cần kiểm tra
                const tendn = document.querySelector("[name='Tendangnhap']");
                const matkhau = document.querySelector("[name='Matkhau']");
                const hoten = document.querySelector("[name='Hoten']");
                const email = document.querySelector("[name='Email']");
                const sdt = document.querySelector("[name='Sodienthoai']");
                const trangthai = document.querySelector("[name='Trangthai']");

                // Xóa thông báo lỗi cũ
                document.querySelectorAll(".text-danger").forEach(el => el.textContent = "");

                if (tendn.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Tendangnhap']").textContent = "Tên đăng nhập không được để trống";
                    isValid = false;
                }

                if (matkhau.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Matkhau']").textContent = "Mật khẩu không được để trống";
                    isValid = false;
                }

                if (hoten.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Hoten']").textContent = "Họ tên không được để trống";
                    isValid = false;
                }

                if (email.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Email']").textContent = "Email không được để trống";
                    isValid = false;
                }

                if (sdt.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Sodienthoai']").textContent = "Số điện thoại không được để trống";
                    isValid = false;
                }

                if (trangthai.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Trangthai']").textContent = "Trạng thái không được để trống";
                    isValid = false;
                }

                // Nếu có lỗi thì không cho submit form
                if (!isValid) {
                    e.preventDefault();
                }
            });
        });
    </script>
}