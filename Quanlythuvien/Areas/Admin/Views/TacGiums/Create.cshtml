@model Quanlythuvien.Models.TblTacGium

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Thêm tác giả mới</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" accept-charset="utf-8">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="MaTg" class="form-label fw-semibold">Mã Khách Hàng</label>
                    <input asp-for="MaTg" class="form-control" value="@ViewBag.NextMaTg" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="TenTg" class="form-label fw-semibold"></label>
                    <input asp-for="TenTg" class="form-control" placeholder="Nhập tên tác giả..." />
                    <span asp-validation-for="TenTg" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Mota" class="form-label fw-semibold"></label>
                    <input asp-for="Mota"  class="form-control" placeholder="Nhập mô tả..." />
                    <span asp-validation-for="Mota" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Thêm mới
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const form = document.querySelector("form");

            form.addEventListener("submit", function(e) {
                let isValid = true;

                // Lấy các input cần kiểm tra
                const tenTg = document.querySelector("[name='TenTg']");
                const mota = document.querySelector("[name='Mota']");

                // Xóa thông báo lỗi cũ
                document.querySelectorAll(".text-danger").forEach(el => el.textContent = "");
                document.querySelectorAll(".form-control").forEach(el => el.classList.remove("is-invalid"));

                // Kiểm tra tên tác giả
                if (tenTg.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='TenTg']").textContent = "Tên tác giả không được để trống";
                    tenTg.classList.add("is-invalid");
                    isValid = false;
                } else if (tenTg.value.trim().length < 3) {
                    document.querySelector("[data-valmsg-for='TenTg']").textContent = "Tên tác giả phải có ít nhất 3 ký tự";
                    tenTg.classList.add("is-invalid");
                    isValid = false;
                }

                // Kiểm tra mô tả
                if (mota.value.trim() === "") {
                    document.querySelector("[data-valmsg-for='Mota']").textContent = "Mô tả không được để trống";
                    mota.classList.add("is-invalid");
                    isValid = false;
                } else if (mota.value.trim().length < 10) {
                    document.querySelector("[data-valmsg-for='Mota']").textContent = "Mô tả phải có ít nhất 10 ký tự";
                    mota.classList.add("is-invalid");
                    isValid = false;
                }

                // Ngăn submit nếu có lỗi
                if (!isValid) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
