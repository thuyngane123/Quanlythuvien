@model IEnumerable<Quanlythuvien.Models.TblSach>
<!-- Our Products Start -->
<div class="container-fluid product py-5">
    <div class="container py-5">
        <div class="tab-class">
            <div class="row g-4">
                <div class="col-lg-4 text-start wow fadeInLeft" data-wow-delay="0.1s">
                    <h1 class="fw-bold text-primary">Kho Sách Thư Viện</h1>
                    <p class="text-muted">Khám phá nguồn tri thức phong phú dành cho học sinh & sinh viên</p>
                </div>
                <div class="col-lg-8 text-end wow fadeInRight" data-wow-delay="0.1s">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item mb-4">
                            <a class="d-flex mx-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill" href="#tab-1">
                                <span class="text-dark" style="width: 130px;">Tất cả các sách</span>
                            </a>
                        </li>
                        <li class="nav-item mb-4">
                            <a class="d-flex py-2 mx-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-2">
                                <span class="text-dark" style="width: 130px;">Sách nổi bật</span>
                            </a>
                        </li>
                        <li class="nav-item mb-4">
                            <a class="d-flex mx-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-3">
                                <span class="text-dark" style="width: 130px;">Mượn nhiều</span>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>

            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        @foreach (var item in Model)
                        {
                            string sUrl = $"/product/{item.TenSach}-{item.MaSach}.html";
                            <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                                <div class="card border-0 shadow-sm rounded-4 overflow-hidden wow fadeInUp" data-wow-delay="0.1s">
                                    <!-- Ảnh sách -->
                                    <div class="position-relative">
                                        <img href="@sUrl" src="@item.Anh" class="img-fluid w-100 rounded-top" alt="@item.TenSach">

                                        <!-- Nhãn "New" -->
                                        <span class="badge bg-danger position-absolute top-0 start-0 m-2 px-3 py-2 rounded-3">Mới</span>

                                        <!-- Nút xem chi tiết -->
                                        <div class="position-absolute top-50 start-50 translate-middle d-flex justify-content-center align-items-center opacity-0 hover-opacity-100">
                                            <a href="@sUrl" class="btn btn-light btn-lg rounded-circle shadow">
                                                <i class="fa fa-eye text-primary"></i>
                                            </a>
                                        </div>
                                    </div>

                                    <!-- Thông tin sách -->
                                    <div class="card-body text-center">
                                        <h5 href="@sUrl" class="card-title mt-2 text-dark fw-semibold">@item.TenSach</h5>
                                        <p class="fw-bold mb-0">
                                            Số lượng còn lại:
                                            <span class="text-warning fs-5">@item.Soluong</span>
                                            <small class="text-muted">quyển</small>
                                        </p>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
      